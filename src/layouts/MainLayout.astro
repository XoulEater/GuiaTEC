---
import Header from "../components/Header.tsx";

interface Props {
  title: string;
  userType: "asistente" | "profesor";
  currentRoute: "equipo" | "estudiantes" | "profesores";
}

const { title, userType, currentRoute } = Astro.props;
---

<!doctype html>
<html lang="es" class="bg-slate-50">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header client:only userType={userType} currentRoute={currentRoute} />
    <slot />
  </body>
</html>
<script>
  if (!localStorage.getItem("user")) {
    window.location.href = "/";
  }
</script>
<style is:global>
  html {
    font-family: Inter, sans-serif;
    background-size: 224px;
  }
  code {
    font-family: Inter, sans-serif;
  }
</style>
